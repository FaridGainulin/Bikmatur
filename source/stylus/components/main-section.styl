.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #da177f

  &__container
    position relative
    z-index 1
    padding 15px 0 0 0
    +above($breakpoints.sm)
      padding 20px 0 80px 0
    +above($breakpoints.md)
      padding 20px 0 100px 0
    +above($breakpoints.xxl)
      padding 25px 0 158px 0

  &__icon
    position: absolute
    height: auto
    top: 0
    width: 240px;
    left: -231px;
    +above($breakpoints.sm)
      width: 147px;
      left: -149px;
    +above($breakpoints.md)
      width: 214px;
      left: -217px;
    +above($breakpoints.xxl)
      width: 391px;
      left: -370px;

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 15px 0
    +above($breakpoints.sm)
      padding 50px 0 20px 0
    +above($breakpoints.md)
      padding 90px 0 20px 0
    +above($breakpoints.xxl)
      letter-spacing: -1.5px;
      padding 124px 0 35px 0

  &__line
    width 76px
    height: 3px
    border-radius: 3px
    background-color #F2D600
    margin 0 auto
    +above($breakpoints.sm)
      margin 0

  &__sub-title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 20px 0 20px 0
    +above($breakpoints.xxl)
      padding 25px 0 24px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-start
    +above($breakpoints.md)
      flex-direction: row
      gap: 8px

  &__agree-wrapper
    display: flex
    justify-content center
    +above($breakpoints.sm)
      justify-content start

  &__img
    width: 280px;
    height: auto;
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 600px;
      right: -148px;
      bottom: 0;
    +above($breakpoints.md)
      width: 710px;
      right: -219px;
    +above($breakpoints.xxl)
      width 1016px
      right: -370px

.main-item
  width 280px !important
  +above($breakpoints.sm)
    width 260px !important
  +above($breakpoints.md)
    width 202px !important
  +above($breakpoints.xxl)
    width 230px !important
