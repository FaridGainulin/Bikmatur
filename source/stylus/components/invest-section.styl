.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #da177f

  &__container
    position relative
    text-align: center
    padding 20px 0 1px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 150px 0 150px 0

  &__img-top
    position: absolute
    width: 260px;
    height: auto;
    top: 0;
    left: -232px;
    +above($breakpoints.sm)
      width: 215px;
      left: -150px;
    +above($breakpoints.md)
      width: 320px;
      left: -217px;
    +above($breakpoints.xxl)
      width 534px
      left: -370px

  &__img-bottom
    position: absolute
    width: 240px;
    height: auto;
    bottom: 0;
    right: -229px;
    +above($breakpoints.sm)
      width: 145px;
      right: -148px;
    +above($breakpoints.md)
      width: 213px;
      right: -216px;
    +above($breakpoints.xxl)
      width 369px
      right: -370px

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 80px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    background-color #0094A8
    border: 3px solid #fff
    padding 15px 20px
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      width 235px !important
      border: 4px solid #fff
      padding 20px 20px 20px 20px
    +above($breakpoints.md)
      width 308px !important
      border: 5px solid #fff
      padding: 25px 20px 25px 20px;
    +above($breakpoints.xxl)
      width 380px !important
      height: 585px
      border: 6px solid #fff
      padding 34px 34px 34px 34px

  &__card-title
    +above($breakpoints.sm)
      letter-spacing: -1px

  &__card-sub-title
    display: flex
    justify-content center
    align-items: center
    border: 1px solid #FFF
    width 150px
    height: 35px
    margin: 14px 0 15px 0
    +above($breakpoints.sm)
      width 190px
      height: 35px
      margin: 14px 0 20px 0
    +above($breakpoints.md)
      width 220px
      height: 45px
    +above($breakpoints.xxl)
      margin: 14px 0 28px 0
      width 252px
      height: 51px

  &__card-img
    width 100%
    height: auto
    border-radius: 50px 0
    +above($breakpoints.sm)
      border-radius: 50px 0
    +above($breakpoints.md)
      border-radius: 60px 0
    +above($breakpoints.xxl)
      border-radius: 70px 0

  &__card-text
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 25px 0 20px 0
    +above($breakpoints.xxl)
      padding 28px 0 20px 0

  &__card
    button
      width 230px !important
      +above($breakpoints.sm)
        width 185px !important
      +above($breakpoints.md)
        width 230px !important
