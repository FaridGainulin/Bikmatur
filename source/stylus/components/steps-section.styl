.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #7DBFCF

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 80px 0 80px 0
    +above($breakpoints.md)
      padding 100px 0 100px 0
    +above($breakpoints.xxl)
      padding 150px 0 150px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 80px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 80px
    color: #1E1E1E
    backdrop-filter: blur(40px);
    background: rgba(255, 255, 255, 0.6)
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    padding-left 15px
    border-radius: 40px 0
    +above($breakpoints.sm)
      gap: 8px
      border-radius: 40px 0
      padding-left 5px
      width 174px !important
      height: 90px
    +above($breakpoints.md)
      gap: 12px
      border-radius: 55px 0
      padding-left 20px
      width 226px !important
      height: 110px
    +above($breakpoints.xxl)
      gap: 20px
      border-radius: 60px 0
      padding-left 22px
      width 280px !important
      height: 122px

  &__card-icon
    width 30px
    height: 30px
    +above($breakpoints.sm)
      width 30px
      height: 30px
    +above($breakpoints.md)
      width 32px
      height: 32px
    +above($breakpoints.xxl)
      width 40px
      height: 40px

  &__card-text
    line-height 125% !important

  &__bottom
    text-align: center
    +above($breakpoints.sm)
      margin-top 30px
      margin-left 335px
      text-align: start
    +above($breakpoints.md)
      margin-top 90px
      margin-left 470px
    +above($breakpoints.xxl)
      margin-top 137px
      margin-left 600px

  &__bottom-line
    width 77px
    height: 3px
    border-radius: 3px
    background-color #DB1C83
    margin 0 auto
    +above($breakpoints.sm)
      margin 0

  &__bottom-title
    padding 15px 0 8px 0
    +above($breakpoints.sm)
      padding 20px 0 8px
    +above($breakpoints.md)
      padding 24px 0 8px
    +above($breakpoints.xxl)
      letter-spacing: -1px
      padding 27px 0 8px

  &__bottom
    button
      width 280px !important
      margin 15px auto 0
      +above($breakpoints.sm)
        margin 0
        width 260px !important
        margin-top 20px
      +above($breakpoints.md)
        width 350px !important
        margin-top 25px
      +above($breakpoints.xxl)
        width 379px !important
        margin-top 30px

  &__img
    width 300px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 330px;
      bottom: 10px;
      left: -20px;
    +above($breakpoints.md)
      width: 450px;
      bottom: 15px;
      left: -50px;
    +above($breakpoints.xxl)
      width 613px
      bottom: 15px
      left: -100px
