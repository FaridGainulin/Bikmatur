.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #0094A8

  &__container
    position relative
    text-align: center
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 100px 0 100px 0
    +above($breakpoints.xxl)
      padding 150px 0 150px 0

  &__icon
    position: absolute
    width: 140px;
    height: auto;
    top: 201px;
    left: -90px;
    +above($breakpoints.sm)
      width: 160px;
      top: 247px;
      left: -101px;
    +above($breakpoints.md)
      width: 180px;
      top: 352px;
      left: -112px;
    +above($breakpoints.xxl)
      width: 223px;
      top: 480px;
      left: -139px;

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0

  &__main
    backdrop-filter: blur(40px);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 30px 0;
    padding 20px 10px 20px 10px
    +above($breakpoints.sm)
      border-radius: 50px 0;
      width: 540px;
      height: 331px;
      padding: 25px 10px 25px 35px;
    +above($breakpoints.md)
      border-radius: 80px 0;
      width: 580px;
      height: 389px;
      padding 42px 10px 41px 46px
    +above($breakpoints.xxl)
      border-radius: 100px 0;
      width: 683px;
      height: 475px;
      padding 62px 10px 61px 66px

  &__bottom-text
    padding 20px 0 14px 0
    +above($breakpoints.sm)
      padding 30px 0 14px 0
    +above($breakpoints.md)
      padding 50px 0 14px 0
    +above($breakpoints.xxl)
      padding 59px 0 14px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 620px
    +above($breakpoints.md)
      gap: 8px
      width 625px
    +above($breakpoints.xxl)
      width 706px

  &__img
    width 250px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 400px;
      bottom: 85px;
      right: -190px;
    +above($breakpoints.md)
      width: 500px;
      bottom: 129px;
      right: -85px;
    +above($breakpoints.xxl)
      width: 656px;
      bottom: 137px;
      right: -105px;

.about-item
  width 280px !important
  +above($breakpoints.sm)
    width 203px !important
  +above($breakpoints.md)
    width 203px !important
  +above($breakpoints.xxl)
    width 230px !important
