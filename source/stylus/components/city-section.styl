.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #da177f

  &__container
    position relative
    z-index 1
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 147px 0 150px 0

  &__icon
    position: absolute
    height: auto
    top: 0
    width: 246px;
    left: -231px;
    +above($breakpoints.sm)
      width: 144px;
      left: -150px;
    +above($breakpoints.md)
      width: 209px;
      left: -217px;
    +above($breakpoints.xxl)
      width 356px
      left: -370px

  &__title,
  &__sub-title,
  &__text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title,
  &__sub-title
    +above($breakpoints.xxl)
      letter-spacing: -1.5px !important

  &__sub-title
    padding 10px 0 15px 0
    +above($breakpoints.sm)
      padding 10px 0 15px 0
    +above($breakpoints.md)
      padding 10px 0 20px 0
    +above($breakpoints.xxl)
      padding 10px 0 23px 0

  &__text
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 15px 0
    +above($breakpoints.md)
      padding 20px 0 20px 0
    +above($breakpoints.xxl)
      padding 23px 0 24px 0

  &__img
    width: 280px;
    height: auto;
    margin 10px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 640px;
      right: -149px;
      bottom: 0;
    +above($breakpoints.md)
      width: 771px;
      right: -217px;
    +above($breakpoints.xxl)
      width 1090px
      right: -370px
