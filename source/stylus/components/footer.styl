.footer
  // background-image: url('../images/footer-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #1E1E1E

  &__container
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 19px 0 18px 0
      justify-content space-between
      flex-direction: row

  &__brand
    display: flex
    flex-direction: row
    align-items: center
    +above($breakpoints.sm)
      gap: 20px
    +above($breakpoints.md)
      gap: 40px
    +above($breakpoints.xxl)
      gap: 64px

  &__brand-name
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 88px

  &__privacy
    cursor pointer
    text-decoration: underline
    color: #E1E1E1

  &__connection
    display: flex
    flex-direction: row
    align-items: center
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      justify-content center
      align-items: center
      color: #3C5210
      box-shadow: inset 0 -2px 0 0 rgba(0, 0, 0, 0.3);
      background: linear-gradient(90deg, #87bf00 0%, #aae82f 100%);
      border-radius: 50px
      cursor pointer
      width 130px
      height: 30px
    +above($breakpoints.md)
      width 150px
      height: 36px
    +above($breakpoints.xxl)
      width 175px
      height: 42px
