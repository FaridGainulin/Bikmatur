@font-face
  font-family 'EtelkaLightPro-Regular'
  src url('../fonts/EtelkaLightPro-Regular.woff'), url('../fonts/EtelkaLightPro-Regular.woff2')
  font-display swap

@font-face
  font-family 'EtelkaMediumPro-Regular'
  src url('../fonts/EtelkaMediumPro-Regular.woff'), url('../fonts/EtelkaMediumPro-Regular.woff2')
  font-display swap

@font-face
  font-family 'EtelkaTextPro-Bold'
  src url('../fonts/EtelkaTextPro-Bold.woff'), url('../fonts/EtelkaTextPro-Bold.woff2')
  font-display swap
@font-face
  font-family 'EtelkaTextPro-Regular'
  src url('../fonts/EtelkaTextPro-Regular.woff'), url('../fonts/EtelkaTextPro-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'EtelkaLightPro-Regular'
  font-weight 400
  line-height 120%
  color #fff

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
